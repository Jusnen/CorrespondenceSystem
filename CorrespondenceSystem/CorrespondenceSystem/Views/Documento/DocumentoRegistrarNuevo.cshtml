
@{
    ViewBag.Title = "Nuevo Documento";
}

<div class="row">
    <div class="col-md-4 form-group">
        <div>
            <label for="txt-codDocumento">Cod. del Documento</label>
            <input id="txt-codDocumento" type="text" class="form-control" placeholder="Codigo del Documento">
        </div>
    </div>
    <div class="col-md-4 form-group">
        <div>
            <label for="txt-fechaCreacion">Fecha Creacion</label>
            <input type="text" id="txt-fechaCreacion" class="form-control datepicker" placeholder="Fecha de creacion">
        </div>
    </div>
    <div class="col-md-4 form-group">
        <label for="select-regional">Regional</label>
        <select id="select-regional" class="form-control">
            <option value='' disabled selected>Seleccione</option>
            <option value="1">Casa</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-md-12 form-group">
        <label for="txt-asunto">Asunto</label>
        <input type="text" class="form-control" id="txt-asunto" placeholder="Insertar Asunto">
    </div>
</div>
<div class="row">
    <div class="col-md-4 form-group">
        <label for="txt-fechaRecibido">Fecha Recibido</label>
        <input type="text" id="txt-fechaRecibido" class="form-control datepicker" placeholder="Fecha de Recepcion">
    </div>
    <div class="col-md-6 col-md-offset-2 form-group">
        <label for="select-destinatarios">Destinatarios</label>
        <select id="select-destinatarios" class="form-control">
            <option value="1">Seleccione</option>
            <option value="2">Tecnologia</option>
        </select>
        <select id="select-destinatarios-multiple" class="form-control" multiple>
            <option value="1">Firma</option>
            <option value="2">Tecnologia</option>
            <option value="2">Recursos Humanos</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <button type="submit" class="btn btn-primary btn-block btn-lg">Registrar</button>
    </div>
</div>