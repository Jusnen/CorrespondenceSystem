
@{
    ViewBag.Title = "Registrar Salida";
}

<div class="row">
    <div class="col-md-3 form-group">
        <label for="txt-documento">Documento</label>
        <input type="text" id="txt-documento" class="form-control" placeholder="Codigo del Documento">
    </div>
    <div class="col-md-3 form-group">
        <label for="select-destinatarios">Destinatarios</label>
        <select id="select-destinatarios" class="form-control">
            <option value='' disabled selected>Seleccione</option>
            <option value="1">TI</option>
            <option value="2">Recursos Humanos</option>
            <option value="3">Compras</option>
        </select>
    </div>
    <div class="col-md-3 form-group">
        <label></label>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="checkbox-devolucion" class=""/>
                Devolucion
            </label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">Documentos</div>
            <div class="panel-body">
                <table id="table-documents" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Asunto</th>
                        <th>Fecha Creacion</th>
                        <th>Fecha Registrado</th>
                        <th>Remitente</th>
                    </tr>
                    </thead>
                </table>
            </div>
            <div class="panel-footer"><button class="btn btn-info " id="btn-refrescar">Refrescar</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <button type="submit" class="btn btn-primary btn-block btn-lg">Registrar</button>
    </div>
</div>

